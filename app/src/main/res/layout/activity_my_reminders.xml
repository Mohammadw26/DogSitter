<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MyRemindersActivity">

    <Button
        android:id="@+id/myreminders_btn_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ADD MY REMINDER"
        app:layout_constraintBottom_toTopOf="@+id/myreminders_btn_see"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/myreminders_btn_see"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SEE MY REMINDERS"
        app:layout_constraintBottom_toTopOf="@+id/allreminders_btn_see"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/myreminders_btn_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_logo" />

    <Button
        android:id="@+id/allreminders_btn_see"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SEE ALL REMINDERS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>