<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/empty_tall_divider_4dp"
    android:orientation="vertical"
    android:padding="8dp"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/empty_width_divider_4dp"
        android:orientation="horizontal"
        android:showDividers="middle">

        <TextView
            android:id="@+id/item_requests_dates_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="TextView"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_requests_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="TextView"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_requests_tv_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="12sp" />

    <RatingBar
        android:id="@+id/item_requests_rating_rb"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:numStars="5"
        android:isIndicator="false"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/item_requests_ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/empty_tall_divider_8dp"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/empty_width_divider_16dp"
            android:orientation="horizontal"
            android:showDividers="middle">

            <androidx.cardview.widget.CardView
                android:id="@+id/item_requests_approve_cv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.5"
                android:backgroundTint="@color/quantum_lightgreen700"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/item_requests_approve_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="4dp"
                    android:text="ACCEPT"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item_requests_decline_cv"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.5"
                android:backgroundTint="@color/theme_color"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="4dp"
                    android:text="DECLINE"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/item_requests_addreminder_cv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.5"
            android:backgroundTint="@color/theme_color"
            app:cardCornerRadius="32dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="4dp"
                android:text="SET REMINDER"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>